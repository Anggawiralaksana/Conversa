<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <TextView
            android:id="@+id/systemNotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/conversa_bg_date_message"
            android:padding="10dp"
            android:textColor="@color/light_message_button_fg_disabled"
            app:backgroundTint="@color/grey5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="You're currently connected with Agent 1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
